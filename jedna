SELECT DISTINCT s.ServerID, s.ServerName
FROM Servers s
JOIN ServerFlags sf ON s.ServerID = sf.ServerID
JOIN Flags f ON sf.FlagID = f.FlagID
WHERE f.FlagID IN (
    SELECT af.FlagID
    FROM ApplicationFlags af
    WHERE af.ApplicationID = @ApplicationID
);


int applicationId = /* the application ID you're interested in */;

    var serversForApplication = context.Servers
        .Where(s => s.ServerFlags
            .Any(sf => context.ApplicationFlags
                .Where(af => af.ApplicationId == applicationId)
                .Select(af => af.FlagId)
                .Contains(sf.FlagId)))
        .Select(s => new { s.ServerId, s.ServerName })
        .ToList();
