def try_allocate_16gb():
    target_size_gb = 16  # Target size in GB
    chunk_size_mb = 100  # Size of each chunk in MB
    chunks = 1024 * target_size_gb // chunk_size_mb  # Calculate the number of chunks needed

    allocated_memory = []
    try:
        for _ in range(chunks):
            # Allocate a chunk of approximately 100MB (1024 * 1024 bytes * 100)
            allocated_memory.append(b'\x00' * (1024 * 1024 * chunk_size_mb))
        return True
    except MemoryError:
        return False

# Attempt to allocate 16GB of memory
if try_allocate_16gb():
    print("Successfully allocated approximately 16GB of memory.")
else:
    print("Failed to allocate 16GB of memory. Encountered a memory error.")

